<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.android.application.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_get_api"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="API.get()"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_post_api"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="API.post()"
            android:textAllCaps="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_put_api"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="API.put()"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_delete_api"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="API.delete()"
            android:textAllCaps="false" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear Output"
        android:textAllCaps="false" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="Output"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/txt_output"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp" />

</LinearLayout>
